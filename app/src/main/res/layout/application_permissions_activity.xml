<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ApplicationPermissionsActivity"
    android:id="@+id/application_permissions_activity">


    <LinearLayout
        android:id="@+id/application_permission__linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/application_permission__recycler_view">

        <ImageView
            android:id="@+id/application_permission__app-icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="30"
            app:srcCompat="@android:color/background_light"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/application_permission__app_name"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="70" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/application_permission__recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/application_permission__linearLayout"
        app:layout_constraintVertical_bias="0.0">

    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>